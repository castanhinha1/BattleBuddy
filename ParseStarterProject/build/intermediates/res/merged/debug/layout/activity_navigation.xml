<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_navigation_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.parse.starter.Controllers.NavigationController"
    android:background="#3a8f3e">

    <TextView
        android:text="What would you like to do today?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcometext"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textColor="#FFF" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/home"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/homebutton"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="20dp"
            android:background="#029789"
            android:onClick="onHomeButtonClick" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/weight"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:id="@+id/weightbutton"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="52dp"
            android:layout_marginBottom="20dp"
            android:background="#029789"
            android:onClick="onCurrentDetailsButtonClick" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profile"
            android:id="@+id/profilebutton"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="70dp"
            android:background="#029789"
            android:onClick="onProfileButtonClick" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/goal"
            android:id="@+id/goalbutton"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="60dp"
            android:background="#029789"
            android:onClick="onNewGoalButtonClick" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/calendar"
            android:id="@+id/calendarbutton"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="60dp"
            android:background="#029789"
            android:onClick="onCalendarButtonClick" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/settings"
            android:id="@+id/settingsbutton"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="52dp"
            android:background="#029789"
            android:onClick="onSettingsButtonClick" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/trainer"
            android:id="@+id/trainerbutton"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="52dp"
            android:layout_marginBottom="20dp"
            android:background="#029789"
            android:onClick="onFindTrainerButtonClick" />
    </GridLayout>

</RelativeLayout>
